n = 5
factorial = 1
userInput = int(input("Enter a number : "))

if userInput >= 2:
    for i in range(userInput, 0, -1):
        factorial *= i
    print(factorial)
elif userInput <= 1 :
    for i in range(n, 0, -1):
        factorial *= i
    print(factorial)


n = 5
factorial = 1
userInput = int(input("Enter a number : "))
def fact (num):
    factorial1 = 1
    for i in range(num, 0, -1):
        factorial1 *= i
    print(factorial1)

if userInput >= 2:
    fact(userInput)
elif userInput <= 1 :
    fact(n)
